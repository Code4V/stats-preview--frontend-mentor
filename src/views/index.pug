  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href=require('../scss/index.sass'))
    link(rel="shortcut icon", sizes="32x32", href=require('./../assets/favicon-32x32.png'), type="image/x-icon")
